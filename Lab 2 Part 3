#include<iostream>
#include<cstring>
#include<cctype>

using namespace std;

int main(){
	
	char days[5] = { "Mon", "tue", "Wed", "Thr", "Friday" };
	string seasons[4][10] = { "Spring", "fall", "Summer", "Winter" };

	//  display both arrays
	for (int i = 0; i < 5; i++)
		cout << days[i] << "\t";

	for (int i = 0; i < 4; i++)
		cout << seasons[i] << "\t";


	return 0;
}
